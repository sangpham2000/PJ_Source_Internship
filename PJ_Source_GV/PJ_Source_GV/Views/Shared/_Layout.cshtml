<body class=" ">
    <!--BEGIN BACK TO TOP--><a id="totop" href="#"><i class="fa fa-angle-up"></i></a><!--END BACK TO TOP-->
    <!--BEGIN TOPBAR-->
    <div id="header-topbar-option-demo" class="page-header-topbar">
        <nav id="topbar" role="navigation" style="margin-bottom: 0; z-index: 2;"
             class="navbar navbar-default navbar-static-top">
            <div class="navbar-header">
                <button type="button" data-toggle="collapse" data-target=".sidebar-collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                <a id="logo" class="navbar-brand" style="padding-top:5px" asp-controller="Home" asp-action="Index">
                    <span class="fa fa-rocket"></span>
                    <span class="logo-text">
                        <img src="~/images/LogoTDTBgWhite.png" class="img-responsive" style="height: 40px; margin-left: auto; margin-right: auto; margin-top: 0%" />
                    </span>
                    <span style="display: none" class="logo-text-icon">
                        <img src="~/images/LogoTDTBgWhite.png" class="img-responsive" style="margin-left: auto; margin-right: auto; margin-top: 10px" />
                    </span>
                </a>
            </div>
            <div class="topbar-main">
                <a id="menu-toggle" href="#" class="hidden-xs"><i class="fa fa-bars"></i></a>
                <span class="hidden-xs hidden-sm hidden-md text-uppercase" style="font-size: 2.2em; color: white; font-weight:bold; align-self: center;">@SharedLocalizer["WebTitle"]</span>
                <ul class="nav navbar navbar-top-links navbar-right mbn" style="margin-left: auto; text-align:right;">
                    <li class="hidden-xs hidden-sm" style="width: 200px;">
                        @{
                            var listPhongBan = JsonConvert.DeserializeObject<AuthService.KiemNhiemInfo[]>(identity.FindFirst("ListKhoa").Value);
                            var selectList = listPhongBan.Select(d => new SelectListItem { Text = d.TenBoPhan, Value = d.MaBoPhan });
                            var maPhongBan = identity.FindFirst("KhoaID").Value;
                            var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                            var cultureItems = LocOptions.Value.SupportedUICultures
                                .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
                                .ToList();
                            var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value + Context.Request.QueryString}";
                        }
                        <select id="list-style" class="form-control selectpicker phongBan"
                                asp-items="@selectList"
                                asp-for="@maPhongBan"
                                data-style="btn-white" data-show-subtext="true" data-live-search="true"></select>
                    </li>
                    <li class="dropdown">
                        <!--BEGIN THEME SETTING-->
                        <a id="theme-setting" data-hover="dropdown" class="dropdown-toggle">
                            <i class="fa fa-cogs"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-theme-setting pull-right">
                            <li>
                                <h4 class="mtn"><i class="fa fa-language"></i> @SharedLocalizer["ChooseLanguage"]</h4>
                                <form asp-area="" asp-controller="Home" asp-action="SetLanguage" id="form" method="post" asp-route-returnUrl="@returnUrl" role="form">
                                    <select id="culture" name="culture" onchange="this.form.submit();" class="form-control selectpicker phongBan"
                                            data-style="btn-white" data-show-subtext="true" data-live-search="true"
                                            asp-for="@requestCulture.RequestCulture.UICulture.Name" asp-items="cultureItems"></select>
                                </form>
                            </li>
                            <li class="hidden-lg hidden-md">
                                <h4 class="mtn">@SharedLocalizer["ChooseUnit"]</h4>
                                <select id="list-phongBan" class="form-control selectpicker phongBan"
                                        asp-items="@selectList"
                                        asp-for="@maPhongBan"
                                        data-style="btn-white" data-show-subtext="true" data-live-search="true"></select>
                            </li>
                        </ul>
                        <!--END THEME SETTING-->
                    </li>
                    <li class="dropdown topbar-user">
                        <a data-hover="dropdown" href="#" class="dropdown-toggle">
                            <img src="https://lecturer.tdtu.edu.vn/API/NhanVien/GetAvatar/@(identity.FindFirst(ClaimTypes.Email).Value)" alt="" id="avatar_user"
                                 class="img-responsive img-circle" />&nbsp;<span class="hidden-xs">@(identity.FindFirst(ClaimTypes.Name).Value)</span>&nbsp;<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-user pull-right">
                                <li><a href="https://lecturer.tdtu.edu.vn/lylich/"><i class="fa fa-user"></i>@SharedLocalizer["LyLich"]</a></li>
                                <li><a asp-action="Logout" asp-controller="Home"><i class="fa fa-key"></i>@SharedLocalizer["Logout"]</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!--END TOPBAR-->
