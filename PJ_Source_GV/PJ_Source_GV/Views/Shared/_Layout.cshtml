                                    </i><span class="menu-title">@SharedLocalizer["PermissionMenu"]</span>
                                    <span class="fa arrow"></span>
                                </a>
                                <ul class="nav nav-second-level collapse" style="height: 0px;">
                                    @if (User.IsInRole("group_view"))
                                    {
                                        <li>
                                            <a href="/group">
                                                <i class="fa fa-users" style="color: #e74c3c;">
                                                </i><span class="submenu-title">@SharedLocalizer["GroupMenu"]</span>
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("page_view"))
                                    {
