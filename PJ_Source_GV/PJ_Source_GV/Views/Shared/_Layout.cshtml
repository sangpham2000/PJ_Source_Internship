                    <ul id="side-menu" class="nav">
                        <li>
                            <div class="clearfix"></div>
                        </li>
                        <li>
                            <a href="https://lecturer.tdtu.edu.vn">
                                <i class="fa fa-sign-in"></i>
                                <span class="menu-title">@SharedLocalizer["LecturerPortal"]</span>
                            </a>
                        </li>
                        <li>
