                                                </i><span class="submenu-title">@SharedLocalizer["PageMenu"]</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        <li>
                            <a href="/home/about">
                                <i class="fa fa-navicon"></i>
                                <span class="menu-title">@SharedLocalizer["ThongTinPhanMem"]</span>
                            </a>
                        </li>
                        <li>
                            <a target="_blank"
                               href="https://hdsd.tdtu.edu.vn/HDSD?id=87">
                                <i class="fa fa-info"></i>
                                <span class="menu-title">@SharedLocalizer["HuongDanSuDung"]</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!--END SIDEBAR MENU--><!--BEGIN PAGE WRAPPER-->
            <div id="page-wrapper">
                <!--BEGIN TITLE & BREADCRUMB PAGE-->
                <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
                    <breadcrumb asp-homepage-title="@SharedLocalizer["Menu_Home"].Value"
                                asp-homepage-url="@Url.Action("Index", "Home", values: new { area = "" })"
                                asp-bootstrap-version="V3"
                                asp-homepage-glyphicon="fa fa-home" class="breadcrumb page-breadcrumb pull-left"><i class="fa fa-angle-right"></i></breadcrumb>
                    <div class="page-header pull-right">
                        <div class="page-title"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <!--END TITLE & BREADCRUMB PAGE--><!--BEGIN CONTENT-->
                <div class="page-content">
                    @RenderBody()
                </div>
                <!--END CONTENT-->
            </div>
            <!--BEGIN FOOTER-->
            <div id="footer" class="fixed">
                <div class="pull-left">
                    @SharedLocalizer["BestBrowsers"]: <img src="/images/compatible_firefox.png" width="25px">&nbsp;&nbsp;<img src="/images/compatible_chrome.gif" width="25px">
                </div>
                <div class="copyright">2022 © @SharedLocalizer["Copyright"]</div>
            </div>
            <!--END FOOTER--><!--END PAGE WRAPPER-->
        </div>
    </body>

</html>

<script type="text/javascript">
    var image = document.getElementById('avatar_user');
    image.onerror = function () {
        this.src = '/images/admin.ico'; // place your error.png image instead
    };

    $(document).ready(function () {
        $("#list-style, #list-phongBan").on("change", function () {
            var maPhongBan = $(this).find('option:selected').val();
            $.ajax({
                url: "/Home/SetPhongBan",
                type: "post",
                data: {
                    maPhongBan
                },
                success: function (result) {
                    if (result) {
                        toastr.success("Cập nhật thành công");
                        location.reload();
                    } else {
                        toastr.error("Cập nhật thất bại");
                    }
                }
            });
        });
        @if (User.IsInRole("chuyendoitk_view"))
        {
            <text>
            $("#list-nhanvien").on("change", function () {
                var maNhanVien = $(this).val();
                $.ajax({
                    url: "/Home/SetNhanVien",
                    type: "post",
                    data: { maNhanVien },
                    success: function (result) {
                        if (result) {
                            toastr.success("Cập nhật thành công");
                            location.reload();
                        } else {
                            toastr.error("Cập nhật thất bại");
                        }
                    },
                    error: function (result) {
                        toastr.error("Cập nhật thất bại");
                    }
                });
            });
            </text>
        }
    });
</script>